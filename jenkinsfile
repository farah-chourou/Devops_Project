        stage('Checkout') {
			steps {
				checkout scm
			}
		}
     stage('Run Docker Compose') {
            steps {
               script {
                    sh "${DOCKER_COMPOSE_PATH} up -d"
                }
            }
        }
     /*  stage('Build') {
