pipeline {
    agent any
    
    stages {
        stage('Build') {
            script {
                    // Run Docker commands directly in the pipeline
                    sh 'docker-compose build'  // Example Docker command
                }
        }
        stage('Unit Test') {
            steps {
                sh 'echo "Running unit tests"'  // Placeholder command for running unit tests
            }
        }
      
        stage('Integration Test') {
            steps {
                sh 'echo "Running integration tests"'  // Placeholder command for running integration tests
            }
        }
    }
    
    post {
        success {
            sh 'echo " i********************"' 
        }
    }
}
